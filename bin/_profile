if [[ -z "${MACPORTS_ROOT:-}" ]]; then
  export MACPORTS_ROOT="$(cd -P -- "$(pwd)" && pwd -P)"
fi

export CFLAGS="-O2 -arch x86_64"
export LDFLAGS="-L$MACPORTS_ROOT/local/lib"
export CPPFLAGS="-I$MACPORTS_ROOT/local/include"

export MANPATH="::macports::$MACPORTS_ROOT/local/share/man::macports::/usr/share/man"

export PATH="::macports::$MACPORTS_ROOT/local/bin:$MACPORTS_ROOT/local/sbin::macports::$PATH"
hash -r
